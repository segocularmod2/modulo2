---
// Importar componentes de React
import GazeEventChecker from '../components/GazeEventChecker.jsx';
import MousePosition from '../components/MousePosition.jsx';
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Página de prueba</title>
  <style>
    /* Estilos para centrar elementos y estilizar botones y fotos */
    body {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
    }
    button, img {
      margin: 10px;
      padding: 10px 20px;
      font-size: 16px;
      cursor: pointer;
    }
    img {
      width: 150px;  /* Tamaño fijo para la demostración */
      height: auto;
      border: 2px solid black;
    }
  </style>
</head>
<body>
  <div id="root">
    <!-- Cargar componentes de React en el cliente -->
    <GazeEventChecker client:load />
    <MousePosition client:load />

    <!-- Botones para pruebas -->
    <button id="btn1">Botón 1</button>
    <button id="btn2">Botón 2</button>
    <button id="btn3">Botón 3</button>
  </div>
</body>
</html>
